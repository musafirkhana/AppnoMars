<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background">

    <RelativeLayout
        android:id="@+id/cd_top_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:alpha="0.4"
        android:background="#000">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Coupon Detail"
            android:textColor="@color/google_white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/cd_top_relative"
        android:orientation="vertical">
        <ImageView
            android:layout_width="fill_parent"
            android:background="@drawable/account_image"
            android:layout_height="200dp" />
        <TextView android:id="@+id/cd_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>
