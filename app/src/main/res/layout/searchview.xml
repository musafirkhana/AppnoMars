<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alertstyle"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/google_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/catagory_imageview"
            android:layout_weight="4"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text="Category"
            android:textColor="@color/google_red"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/catagory_imageview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:clickable="true"
            android:background="@drawable/login_btn_rounded_corner"
            android:text="Category"
            android:textColor="@color/google_white"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/google_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/places_imageview"
            android:layout_weight="4"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text="Places"
            android:textColor="@color/google_red"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/places_imageview"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:background="@drawable/login_btn_rounded_corner"
            android:text="Places"
            android:clickable="true"
            android:textColor="@color/google_white"
            android:textStyle="bold" />

    </LinearLayout>

    <Button android:id="@+id/btn_search"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_btn_rounded_corner"
        android:text="Search"
        android:clickable="true"
        android:textColor="@color/google_white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>